<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="top">

        <View
            android:id="@+id/containerTotalAgendamentos"
            style="@style/ContainerAzul"
            android:layout_width="165dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toBottomOf="@+id/Container_AgendamentosDoDia"
            android:layout_marginTop="20dp"



            />
        <DatePicker
            android:id="@+id/Container_AgendamentosDoDia"
            android:background="@drawable/container_components"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            app:layout_constraintTop_toBottomOf="@id/containerTotalAgendamentos"
            app:layout_constraintStart_toStartOf="@id/containerTotalAgendamentos"
            app:layout_constraintEnd_toEndOf="@id/containerTotalAgendamentos"
            app:layout_constraintBottom_toTopOf="@id/containerTotalAgendamentos"

            >

        </DatePicker>

        <View
            android:id="@+id/containerFaturamentoPrevisto"
            android:backgroundTint="#28E561"
            style="@style/ContainerAzul"
            android:layout_width="165dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/Container_AgendamentosDoDia"
            app:layout_constraintStart_toEndOf="@id/containerTotalAgendamentos"
            app:layout_constraintBottom_toBottomOf="@id/containerTotalAgendamentos"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/TextView_FaturamentoPrevisto"
            android:hint="Faturamento Previsto"
            android:textColorHint="#000000"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/containerFaturamentoPrevisto"
            app:layout_constraintStart_toStartOf="@id/containerFaturamentoPrevisto"
            app:layout_constraintEnd_toEndOf="@id/containerFaturamentoPrevisto"
            app:layout_constraintBottom_toTopOf="@+id/valor_faturamento_previsto"
            android:layout_marginTop="10dp"/>



        <TextView
            android:id="@+id/quantidadeTotalAgendamentos"
            android:hint="0"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#FFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/containerTotalAgendamentos"
            app:layout_constraintStart_toStartOf="@id/containerTotalAgendamentos"
            app:layout_constraintEnd_toEndOf="@id/containerTotalAgendamentos"
            app:layout_constraintBottom_toTopOf="@id/containerTotalAgendamentos"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/TextView_TotalAgendamentos"
            android:hint="Total Agendamentos"
            android:textColorHint="#FFFF"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/containerTotalAgendamentos"
            app:layout_constraintStart_toStartOf="@id/containerTotalAgendamentos"
            app:layout_constraintEnd_toEndOf="@id/containerTotalAgendamentos"
            app:layout_constraintBottom_toTopOf="@+id/quantidadeTotalAgendamentos"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/valor_faturamento_previsto"
            android:hint="R$ 0.00"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/containerFaturamentoPrevisto"
            app:layout_constraintStart_toStartOf="@id/containerFaturamentoPrevisto"
            app:layout_constraintEnd_toEndOf="@id/containerFaturamentoPrevisto"
            app:layout_constraintBottom_toTopOf="@id/containerFaturamentoPrevisto"
            android:layout_marginBottom="20dp"/>





        <View
            android:id="@+id/containerAcoes"
            style="@style/ContainerBorder"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/containerFaturamentoPrevisto"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/ações_rapidas"
            android:hint="Ações Rápidas"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/containerAcoes"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            app:layout_constraintBottom_toTopOf="@+id/containerFaturamentoPrevisto"
            android:layout_marginTop="45dp"/>

        <Button
            android:id="@+id/button_NovoAgendamento_Agenda"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ações_rapidas"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
            android:text="Novo Agendamento"
            android:textSize="11sp"/>

        <Button
            android:id="@+id/button_BloquearHorario"
            android:backgroundTint="#28E561"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/ações_rapidas"
            app:layout_constraintEnd_toEndOf="@id/containerAcoes"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"
            android:text="Bloquear Horário"
            android:textSize="11sp"

            />

        <FrameLayout
            android:id="@+id/Container_HorariosDisponiveisHoje"
            style="@style/ContainerBorder"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/containerAcoes">

            <TextView
                android:id="@+id/TextView_HorariosDisponiveisHoje"
                android:hint="Horários Disponíveis Hoje"
                android:fontFamily="sans-serif-medium"
                android:textColorHint="#000000"
                android:textSize="16sp"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"/>

            <!-- Aqui vai o grid dos horários -->
            <GridLayout
                android:id="@+id/GridHorarios"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:orientation="horizontal"
                android:padding="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="40dp"
                android:useDefaultMargins="true"/>
        </FrameLayout>







        <View
            android:id="@+id/Container_EstatisticasDaSemana"
            style="@style/ContainerBorder"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/Container_HorariosDisponiveisHoje"
            android:layout_marginTop="20dp"
            />















    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
