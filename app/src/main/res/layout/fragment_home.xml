<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="top">

        <View
            android:id="@+id/containerAgendamentosHoje"
            style="@style/ContainerAzul"
            android:layout_width="165dp"
            android:layout_height="90dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"

            />

        <View
            android:id="@+id/containerFaturamento"
            android:backgroundTint="#28E561"
            style="@style/ContainerAzul"
            android:layout_width="165dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="@id/containerAgendamentosHoje"
            app:layout_constraintStart_toEndOf="@id/containerAgendamentosHoje"
            app:layout_constraintBottom_toBottomOf="@id/containerAgendamentosHoje"
            />

        <View
            android:id="@+id/container_prox_cliente"
            style="@style/ContainerComponents"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/containerAgendamentosHoje"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/quantidadeAgendamentosHoje"
            android:hint="0"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#FFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/containerAgendamentosHoje"
            app:layout_constraintStart_toStartOf="@id/containerAgendamentosHoje"
            app:layout_constraintEnd_toEndOf="@id/containerAgendamentosHoje"
            app:layout_constraintBottom_toTopOf="@id/containerAgendamentosHoje"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/agendamentos_hoje"
            android:hint="Agendamentos Hoje"
            android:textColorHint="#FFFF"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/containerAgendamentosHoje"
            app:layout_constraintStart_toStartOf="@id/containerAgendamentosHoje"
            app:layout_constraintEnd_toEndOf="@id/containerAgendamentosHoje"
            app:layout_constraintBottom_toTopOf="@+id/quantidadeAgendamentosHoje"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/valor_faturamento_hoje"
            android:hint="R$ 0.00"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/containerFaturamento"
            app:layout_constraintStart_toStartOf="@id/containerFaturamento"
            app:layout_constraintEnd_toEndOf="@id/containerFaturamento"
            app:layout_constraintBottom_toTopOf="@id/containerFaturamento"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/faturamento_hoje"
            android:hint="Faturamento Hoje"
            android:textColorHint="#000000"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/containerFaturamento"
            app:layout_constraintStart_toStartOf="@id/containerFaturamento"
            app:layout_constraintEnd_toEndOf="@id/containerFaturamento"
            app:layout_constraintBottom_toTopOf="@+id/valor_faturamento_hoje"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/proximo_cliente"
            android:hint="Próximo Cliente"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/container_prox_cliente"
            app:layout_constraintStart_toStartOf="@id/container_prox_cliente"
            app:layout_constraintBottom_toTopOf="@+id/containerAgendamentosHoje"
            android:layout_marginTop="45dp"/>

        <TextView
            android:id="@+id/nome_prox_cliente"
            android:hint="Nome Cliente"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/container_prox_cliente"
            app:layout_constraintStart_toStartOf="@id/container_prox_cliente"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toTopOf="@+id/proximo_cliente"
            android:layout_marginTop="20dp"

            />
        <TextView
            android:id="@+id/serviço_prox_cliente"
            android:hint="Corte"
            android:textColorHint="#000000"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/container_prox_cliente"
            app:layout_constraintStart_toStartOf="@id/container_prox_cliente"
            android:layout_marginLeft="20dp"
            app:layout_constraintBottom_toTopOf="@+id/nome_prox_cliente"
            android:layout_marginTop="8dp"

            />

        <TextView
            android:id="@+id/horario_agendamento_prox"
            android:hint="00:00"
            android:textSize="16sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#1b6c82"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/container_prox_cliente"
            app:layout_constraintEnd_toEndOf="@id/container_prox_cliente"
            android:layout_marginRight="20dp"
            app:layout_constraintBottom_toTopOf="@+id/proximo_cliente"
            android:layout_marginTop="40dp"/>

        <View
            android:id="@+id/containerAcoes"
            style="@style/ContainerBorder"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/container_prox_cliente"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/ações_rapidas"
            android:hint="Ações Rápidas"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/containerAcoes"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            app:layout_constraintBottom_toTopOf="@+id/container_prox_cliente"
            android:layout_marginTop="70dp"/>

        <Button
            android:id="@+id/button_novo_agendamento"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@id/ações_rapidas"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            android:layout_marginTop="35dp"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
            android:text="Novo Agendamento"
            android:textSize="11sp"/>

        <Button
            android:id="@+id/button_VerAgenda"
            android:backgroundTint="#28E561"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:textStyle="bold"
            android:textColor="#000000"
            app:layout_constraintTop_toBottomOf="@id/ações_rapidas"
            app:layout_constraintEnd_toEndOf="@id/containerAcoes"
            android:layout_marginTop="35dp"
            android:layout_marginRight="20dp"
            android:textAllCaps="false"
            android:text="Ver Agenda"
            android:textSize="11sp"

            />

        <View
            android:id="@+id/Container_AgendaDeHoje"
            style="@style/ContainerBorder"
            android:layout_width="350dp"
            android:layout_height="150dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/containerAcoes"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/TextView_AgendaDeHoje"
            android:hint="Agenda de Hoje"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/Container_AgendaDeHoje"
            app:layout_constraintStart_toStartOf="@id/Container_AgendaDeHoje"
            app:layout_constraintBottom_toTopOf="@+id/containerAcoes"
            android:layout_marginTop="190dp"/>


        <View
            android:id="@+id/Container_EstatisticasDaSemana"
            style="@style/ContainerBorder"
            android:layout_width="350dp"
            android:layout_height="120dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/Container_AgendaDeHoje"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/TextView_EstatisticasDaSemana"
            android:hint="Estatísticas da Semana"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#000000"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="@id/Container_EstatisticasDaSemana"
            app:layout_constraintStart_toStartOf="@id/Container_EstatisticasDaSemana" />


        <TextView

            android:hint="Total de Agendamentos:"
            android:textColorHint="#000000"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/TextView_EstatisticasDaSemana"
            app:layout_constraintStart_toStartOf="@id/Container_EstatisticasDaSemana"
            android:layout_marginTop="35dp"
            android:textSize="12sp"
            />

        <TextView

            android:hint="Faturamento:"
            android:textColorHint="#000000"
            android:layout_marginLeft="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/TextView_EstatisticasDaSemana"
            app:layout_constraintStart_toStartOf="@id/Container_EstatisticasDaSemana"
            android:layout_marginTop="55dp"

            android:textSize="12sp"

            />


        <TextView
            android:id="@+id/total_agendamentos_semana"
            android:hint="0"
            android:textColorHint="#000000"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/TextView_EstatisticasDaSemana"
            app:layout_constraintEnd_toEndOf="@id/Container_EstatisticasDaSemana"
            android:layout_marginTop="35dp"
            android:textSize="12sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/valor_faturamento_semana"
            android:hint="R$ 0.00"
            android:textColorHint="#28E561"
            android:layout_marginRight="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/TextView_EstatisticasDaSemana"
            app:layout_constraintEnd_toEndOf="@id/Container_EstatisticasDaSemana"
            android:layout_marginTop="55dp"
            android:textSize="12sp"
            android:textStyle="bold"

            />




    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
