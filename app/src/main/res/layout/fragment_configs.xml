            android:id="@+id/Container_AgendamentosDoDia"
            android:background="@drawable/container_components"
            android:layout_width="320dp"
            android:layout_height="150dp"
            android:datePickerMode="spinner"
            android:calendarViewShown="false"
            app:layout_constraintTop_toBottomOf="@id/TextView_HorariosDeFuncionamento"
            app:layout_constraintStart_toStartOf="@id/containerHorarioDeFuncionamento"
            app:layout_constraintEnd_toEndOf="@id/containerHorarioDeFuncionamento"
            android:layout_marginTop="30dp"

            />

        <TextView
            android:id="@+id/TextView_HorariosDisponiveis"
            android:hint="Horarios Disponiveis"
            android:textColorHint="#000000"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@id/Container_AgendamentosDoDia"
            app:layout_constraintStart_toStartOf="@id/containerHorarioDeFuncionamento"
           />

        <TextView
            android:id="@+id/TextView_ToqueParaSelecionar"
            android:hint="Toque para selecionar/desselecionar"
            android:textColorHint="#000000"
            android:textSize="13sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/TextView_HorariosDisponiveis"
            app:layout_constraintStart_toStartOf="@id/containerHorarioDeFuncionamento"
            />

