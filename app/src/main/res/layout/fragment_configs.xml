<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#FFFFFF">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintRoot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="top"
        >
        
        

        <TextView
            android:id="@+id/TextView_GerenciamentoDaBarbearia"
            android:hint="Gerenciamento Da Barbearia"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#000000"
            android:textSize="19sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp"
            android:gravity="center" />




        <View
            android:id="@+id/containerAcoes"
            style="@style/ContainerBorder"
            android:layout_width="350dp"
            android:layout_height="500dp"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            />

        <TextView
            android:id="@+id/TextView_InformaçõesDaBarbearia"
            android:hint="Informações da Barbearia"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#186D82"
            android:textSize="17sp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/containerAcoes"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            android:layout_marginTop="20dp"


            />
        
        <EditText
            android:id="@+id/EditText_NomeBarbearia"
            android:background="@drawable/container_edittext"
            android:backgroundTint="#f3f3f5"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            app:layout_constraintTop_toBottomOf="@+id/TextView_NomeBarbearia"
            android:layout_marginTop="0dp"
            />

        <TextView
            android:id="@+id/TextView_NomeBarbearia"
            style="@style/Text_View"
            android:text="Nome da Barbearia"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="15dp"
            android:textColor="#2c2c2c"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            app:layout_constraintTop_toBottomOf="@id/TextView_InformaçõesDaBarbearia"
            android:layout_marginTop="35dp"
            />

        <EditText
            android:id="@+id/EditText_DescriçãoBarbearia"
            android:background="@drawable/container_edittext"
            android:backgroundTint="#f3f3f5"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            app:layout_constraintTop_toBottomOf="@+id/TextView_DescriçãoBarbearia"
            android:layout_marginTop="0dp"
            />

        <TextView
            android:id="@+id/TextView_DescriçãoBarbearia"
            style="@style/Text_View"
            android:text="Descrição"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="15dp"
            android:textColor="#2c2c2c"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            app:layout_constraintTop_toBottomOf="@id/EditText_NomeBarbearia"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/EditText_TelefoneBarbearia"
            android:background="@drawable/container_edittext"
            android:backgroundTint="#f3f3f5"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            app:layout_constraintTop_toBottomOf="@+id/TextView_TelefoneBarbearia"
            android:layout_marginTop="0dp"
            />

        <TextView
            android:id="@+id/TextView_TelefoneBarbearia"
            style="@style/Text_View"
            android:text="Telefone"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="15dp"
            android:textColor="#2c2c2c"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            app:layout_constraintTop_toBottomOf="@id/EditText_DescriçãoBarbearia"
            android:layout_marginTop="20dp"
            />


        <EditText
            android:id="@+id/EditText_Endereço"
            android:background="@drawable/container_edittext"
            android:backgroundTint="#f3f3f5"
            android:layout_width="320dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            app:layout_constraintTop_toBottomOf="@+id/TextView_Endereço"
            android:layout_marginTop="0dp"
            />

        <TextView
            android:id="@+id/TextView_Endereço"
            style="@style/Text_View"
            android:text="Endereço"
            android:fontFamily="sans-serif-medium"
            android:layout_marginLeft="15dp"
            android:textColor="#2c2c2c"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            app:layout_constraintTop_toBottomOf="@id/EditText_TelefoneBarbearia"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/button_SalvarInformações"
            android:fontFamily="sans-serif-medium"
            android:layout_width="320dp"
            android:layout_height="40dp"
            android:backgroundTint="#006e65"
            android:textColor="#FFFFFF"
            android:text='Salvar Informações'
            android:background="@drawable/botao_redondo"
            android:layout_marginTop="110dp"
            app:layout_constraintStart_toStartOf="@id/containerAcoes"
            app:layout_constraintEnd_toEndOf="@id/containerAcoes"
            app:layout_constraintTop_toBottomOf="@id/EditText_TelefoneBarbearia"
            android:textAllCaps="false"
            android:textStyle="bold"
            />


        <View
            android:id="@+id/containerFotoDaBarbearia"
            style="@style/ContainerBorder"
            android:layout_width="350dp"
            android:layout_height="250dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/containerAcoes"/>

        <TextView
            android:id="@+id/TextView_FotoDaBarbearia"
            android:hint="Foto Da Barbearia"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#186D82"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="@id/containerFotoDaBarbearia"
            app:layout_constraintStart_toStartOf="@id/containerFotoDaBarbearia"/>


        <View
            android:id="@+id/containerHorarioDeFuncionamento"
            style="@style/ContainerBorder"
            android:layout_width="350dp"
            android:layout_height="780dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/containerFotoDaBarbearia"/>


        <TextView
            android:id="@+id/TextView_HorariosDeFuncionamento"
            android:hint="Horarios De Funcionamento"
            android:fontFamily="sans-serif-medium"
            android:textColorHint="#186D82"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="@id/containerHorarioDeFuncionamento"
            app:layout_constraintStart_toStartOf="@id/containerHorarioDeFuncionamento"/>

